body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    height: 200vh; /* To allow for scrolling */
}

.background-image {
    position: fixed;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 50%;
    background-image: url('your-image-url.jpg'); /* Replace with your image URL */
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    transform: translate(-50%, -50%) rotate(90deg);
    pointer-events: none; /* To make sure content is clickable */
    z-index: -1; /* To place it behind other content */
}
